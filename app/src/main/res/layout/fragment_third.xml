<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="techpalle.com.m_tester.ThirdFragment">

    <!-- TODO: Update blank fragment layout -->

    <!--<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click here to insert aptitude data"
        android:id="@+id/buttonApti"
        />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f9eae1"
                android:layout_margin="5sp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="3"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_margin="0dp"
                        />
                    <!--<TextView
                        android:layout_width="0dp"
                        android:id="@+id/textView2"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="00:13 |"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_margin="2sp"
                        />-->
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:text="+1.0"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_margin="2sp"
                        android:textColor="#0a0"
                        />
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:text="-0.25"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_margin="2sp"
                        android:textColor="#f00"
                        />
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/review"
                        android:tag="review"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A vessel is filled with liquid, 3 parts of which are water and 5 parts syrup. How much of the mixture must be drawn off and replced with water so that the mixture may be half water and half syrup?"
                        android:textSize="22sp"
                        android:gravity="left"
                        android:textColor="#000"
                        android:padding="10sp"

                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.  1/3"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:background="@drawable/rect"
                    android:layout_margin="5sp"
                    android:padding="15sp"
                    />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.  1/4"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:background="@drawable/rect"
                    android:layout_margin="5sp"
                    android:padding="15sp"
                    />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3.  1/5"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:background="@drawable/rect"
                    android:layout_margin="5sp"
                    android:padding="15sp"
                    />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.  1/7"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:background="@drawable/rect"
                    android:layout_margin="5sp"
                    android:padding="15sp"
                    />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
